<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.khacchung.makevideo">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity
            android:name=".activity.HomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.PlayVideoActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".activity.CutSoundActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.CreatedFileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SaveVideoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.CreateVideoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MoveIndexActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SelectImageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ShowImageFullScreenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ListImageEditActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.PermissionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.EditImageActivity"
            android:screenOrientation="portrait" />

        <service
            android:name=".service.CreateVideoService"
            android:enabled="true"
            android:exported="true" />

    </application>

</manifest>