<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="model"
            type="com.khacchung.makevideo.model.MyImageModel" />

        <variable
            name="handler"
            type="com.khacchung.makevideo.handler.MyClickHandler" />

    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/imgThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="@{handler.onClick}"
            android:transitionName="imgFrom"
            app:imageUri="@{model.pathImage}" />

        <FrameLayout
            android:id="@+id/frTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#27000000"
            android:visibility="gone">


            <TextView
                android:id="@+id/txtBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:drawableLeft="@drawable/ic_left_arrow"
                android:drawablePadding="16dp"
                android:gravity="center|left"
                android:onClick="@{handler.onClick}"
                android:text="@string/back"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_margin="16dp"
                android:drawableRight="@drawable/ic_brush"
                android:drawablePadding="16dp"
                android:onClick="@{handler.onClick}"
                android:text="@string/edit_image"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />
        </FrameLayout>
    </FrameLayout>
</layout>