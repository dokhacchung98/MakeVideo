<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="model"
            type="com.khacchung.makevideo.model.MyFrameModel" />

        <variable
            name="handler"
            type="com.khacchung.makevideo.handler.MyClickHandler" />
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/imgThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="@{(v)->handler.onClickWithData(v, model)}"
            android:src="@{model.pathFrame}" />

        <ImageView
            android:id="@+id/img_checked"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#5C000000"
            android:src="@drawable/ic_tick"
            android:visibility="gone" />
    </FrameLayout>
</layout>